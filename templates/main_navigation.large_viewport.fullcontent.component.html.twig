{# @var this \EnterpriseToolingForSymfony\WebuiBundle\Component\MainNavigationLargeViewportFullcontentComponent #}

{# This container is only shown on large viewports #}
<div class="hidden lg:flex flex-1 items-center">
    {# Primary navigation items - shown next to logo #}
    <div class="flex items-center gap-x-1 sm:gap-x-2">
        {# Apply simpler link style, closer to target examples #}
        {# Example @apply rules: #}
        {# .etfswui-nav-link-fullcontent { @apply text-gray-700 hover:text-primary-600 dark:text-gray-300 dark:hover:text-primary-400; } #}
        {# .etfswui-nav-link-fullcontent-active { @apply text-primary-600 dark:text-primary-400; } #}
        {% for entry in this.mainNavigationService.primaryMainNavigationEntries %}
            <a href="{{ entry.url }}"
               class="group flex items-center gap-x-2 rounded-md px-3 py-2 text-sm leading-6 font-medium {{ entry.isActive ? 'etfswui-nav-link-fullcontent-active' : 'etfswui-nav-link-fullcontent' }}">
                {{ entry.title }}
                {# Icons might look out of place with simpler text links, consider removing or styling differently #}
                {% if entry.iconSvg %}
                    <svg class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        {{ entry.iconSvg|raw }}
                    </svg>
                {% endif %}
            </a>
        {% endfor %}
    </div>

    {# Secondary and tertiary items container - pushed to the right #}
    <div class="flex items-center gap-x-1 sm:gap-x-2 ml-auto">
        {# Secondary navigation items - only shown outside dropdown if configured that way #}
        {% if not this.mainNavigationService.secondaryMainNavigationIsPartOfDropdown() %}
            {% for entry in this.mainNavigationService.finalSecondaryMainNavigationEntries %}
                <a href="{{ entry.url }}"
                   class="group flex items-center gap-x-2 rounded-md px-3 py-2 text-sm leading-6 font-medium {{ entry.isActive ? 'etfswui-nav-link-fullcontent-active' : 'etfswui-nav-link-fullcontent' }}">
                    {{ entry.title }}
                    {% if entry.iconSvg %}
                        <svg class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            {{ entry.iconSvg|raw }}
                        </svg>
                    {% endif %}
                </a>
            {% endfor %}
        {% endif %}

        {# Dropdown for tertiary navigation (and optional secondary navigation) #}
        <div class="relative">
            {# Dropdown Toggle Button - Style as subtle text/icon button #}
            <button type="button"
                    class="flex items-center gap-x-1.5 rounded-md px-3 py-2 text-sm leading-6 font-medium text-gray-700 hover:text-primary-600 dark:text-gray-300 dark:hover:text-primary-400 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    {{ stimulus_action('webuiMainNavigation', 'toggleDropdownMenu', 'click') }}
            >
                <span>{{ this.mainNavigationService.getDropdownTitle() }}</span>
                {# Hamburger Icon (Initially visible) #}
                <svg class="h-5 w-5 shrink-0 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" {{ stimulus_target('webuiMainNavigation', 'dropdownToggleButtonIcon') }}>
                     <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                </svg>
                {# Close Icon (Initially hidden) #}
                <svg class="h-5 w-5 shrink-0 text-gray-400 dark:text-gray-500 hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" {{ stimulus_target('webuiMainNavigation', 'dropdownToggleButtonIcon') }}>
                     <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            {# Right-aligned Sidebar Menu (replaces dropdown) #}
            <div class="hidden lg:fixed lg:top-16 lg:right-0 lg:z-50 lg:w-72 lg:flex-col lg:flex-shrink-0 lg:h-[calc(100vh-4rem)] etfswui-nav-bg etfswui-nav-border-left"
                 {# Note: Visibility controlled by Stimulus toggleDropdownMenu adding/removing 'hidden' #}
                 {{ stimulus_target('webuiMainNavigation', 'dropdownMenu') }}
            >
                {# Actual Sidebar Content (Scrollable) #}
                <div class="flex grow flex-col gap-y-5 overflow-y-auto px-6 pb-4 pt-5"> {# Added pt-5 for spacing #}
                    {# Optional: Add close button if needed, maybe positioned top-left? For now, rely on click outside #}

                    {# Navigation structure (mirrors large viewport appshell, right-aligned) #}
                    <nav class="flex flex-1 flex-col">
                        <ul role="list" class="flex flex-1 flex-col gap-y-7">
                            {# Include secondary navigation in dropdown if configured that way #}
                            {% if this.mainNavigationService.secondaryMainNavigationIsPartOfDropdown() and this.mainNavigationService.finalSecondaryMainNavigationEntries|length > 0 %}
                                <li>
                                    <div class="etfswui-nav-section-title px-2 text-right">{{ this.mainNavigationService.getSecondaryMainNavigationTitle() }}</div>
                                    <ul role="list" class="etfswui-nav-group mt-2 space-y-1">
                                        {% for entry in this.mainNavigationService.finalSecondaryMainNavigationEntries %}
                                            {% if entry.isSeparator %}
                                                <li><div class="my-2 h-px bg-gray-200 dark:bg-gray-700"></div></li>
                                            {% else %}
                                                <li>
                                                    <a {% if entry.url %}href="{{ entry.url }}"{% endif %}
                                                       class="group flex flex-row-reverse gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-right {{ entry.isActive ? 'etfswui-nav-link-active' : 'etfswui-nav-link' }}">
                                                        {% if entry.iconSvg %}
                                                            <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                                {{ entry.iconSvg|raw }}
                                                            </svg>
                                                        {% endif %}
                                                        <span class="flex-1">{{ entry.title }}</span> {# Use flex-1 to push text left #}
                                                    </a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                                {# Add divider if both sections exist #}
                                {% if this.mainNavigationService.tertiaryMainNavigationEntries|length > 0 %}
                                    <li><div class="my-2 h-px bg-gray-200 dark:bg-gray-700"></div></li>
                                {% endif %}
                            {% endif %}

                            {# Tertiary navigation entries (Pushed to bottom) #}
                            {% if this.mainNavigationService.tertiaryMainNavigationEntries|length > 0 %}
                                <li class="mt-auto">
                                    <div class="etfswui-nav-section-title px-2 text-right">{{ this.mainNavigationService.getTertiaryMainNavigationTitle() }}</div>
                                    <ul role="list" class="etfswui-nav-group mt-2 space-y-1">
                                        {% for entry in this.mainNavigationService.tertiaryMainNavigationEntries %}
                                            {% if entry.isSeparator %}
                                                <li><div class="my-2 h-px bg-gray-200 dark:bg-gray-700"></div></li>
                                            {% else %}
                                                <li>
                                                    <a {% if entry.url %}href="{{ entry.url }}"{% endif %}
                                                       class="group flex flex-row-reverse gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold text-right {{ entry.isActive ? 'etfswui-nav-link-active' : 'etfswui-nav-link' }}">
                                                        {% if entry.iconSvg %}
                                                            <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                                {{ entry.iconSvg|raw }}
                                                            </svg>
                                                        {% endif %}
                                                        <span class="flex-1">{{ entry.title }}</span> {# Use flex-1 to push text left #}
                                                    </a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
