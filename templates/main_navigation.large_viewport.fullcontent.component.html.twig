{# @var this \EnterpriseToolingForSymfony\WebuiBundle\Component\MainNavigationLargeViewportFullcontentComponent #}

{# This container is only shown on large viewports #}
<div class="hidden lg:flex flex-1 items-center">
    {# Primary navigation items - shown next to logo #}
    <div class="flex items-center gap-x-2">
        {% for entry in this.mainNavigationService.primaryMainNavigationEntries %}
            <a href="{{ entry.url }}"
               class="group flex items-center gap-x-2 rounded-sm px-3 py-2 text-base leading-6 font-thinner !text-black dark:!text-white {{ entry.isActive ? 'etfswui-nav-link-active' : 'etfswui-nav-link' }}">
                {{ entry.title }}
                {% if entry.iconSvg %}
                    <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        {{ entry.iconSvg|raw }}
                    </svg>
                {% endif %}
            </a>
        {% endfor %}
    </div>

    {# Secondary and tertiary items container - pushed to the right #}
    <div class="flex items-center gap-x-2 ml-auto">
        {# Secondary navigation items - only shown outside dropdown if configured that way #}
        {% if not this.mainNavigationService.secondaryMainNavigationIsPartOfDropdown() %}
            {% for entry in this.mainNavigationService.finalSecondaryMainNavigationEntries %}
                <a href="{{ entry.url }}"
                   class="group flex items-center gap-x-2 rounded-sm px-3 py-2 text-base leading-6 font-thinner !text-black dark:!text-white {{ entry.isActive ? 'etfswui-nav-link-active' : 'etfswui-nav-link' }}">
                    {{ entry.title }}
                    {% if entry.iconSvg %}
                        <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            {{ entry.iconSvg|raw }}
                        </svg>
                    {% endif %}
                </a>
            {% endfor %}
        {% endif %}

        {# Dropdown for tertiary navigation (and optional secondary navigation) #}
        <div class="relative">
            <button type="button"
                    class="flex items-center gap-x-2 rounded-sm px-3 py-2 text-base leading-6 font-thinner text-black dark:text-white hover:text-black dark:hover:text-white"
                    {{ stimulus_action('webuiMainNavigation', 'toggleDropdownMenu', 'click') }}
            >
                {{ this.mainNavigationService.getDropdownTitle() }}
                <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    {{ this.mainNavigationService.getDropdownSvgIcon()|raw }}
                </svg>
            </button>

            <div class="fixed hidden z-10 mt-[0.81rem] w-64 rounded-sm bg-white dark:bg-dark-800 ring-1 ring-gray-200 dark:ring-dark-700 shadow-lg"
                 style="right: 0"
                 {{ stimulus_target('webuiMainNavigation', 'dropdownMenu') }}
            >
                <div class="p-2 space-y-1">
                    {# Include secondary navigation in dropdown if configured that way #}
                    {% if this.mainNavigationService.secondaryMainNavigationIsPartOfDropdown() and this.mainNavigationService.finalSecondaryMainNavigationEntries|length > 0 %}
                        <div class="px-3 py-1 text-base font-normal text-gray-500 dark:text-gray-400">
                            {{ this.mainNavigationService.getSecondaryMainNavigationTitle() }}
                        </div>
                        {% for entry in this.mainNavigationService.finalSecondaryMainNavigationEntries %}
                            {% if entry.isSeparator %}
                                <div class="h-px bg-gray-200 dark:bg-dark-700 my-1"></div>
                            {% else %}
                                <a {% if entry.url %}href="{{ entry.url }}"{% endif %}
                                   class="pl-7 group flex items-center gap-x-2 rounded-sm px-3 py-2 text-sm leading-6 font-thinner !text-black dark:!text-white {{ entry.isActive ? 'etfswui-nav-link-active' : 'etfswui-nav-link' }}">
                                    {{ entry.title }}
                                </a>
                            {% endif %}
                        {% endfor %}
                    {% endif %}

                    {# Tertiary navigation entries #}
                    {% if this.mainNavigationService.tertiaryMainNavigationEntries|length > 0 %}
                        <div class="px-3 py-1 text-base font-normal text-gray-500 dark:text-gray-400">
                            {{ this.mainNavigationService.getTertiaryMainNavigationTitle() }}
                        </div>
                        {% for entry in this.mainNavigationService.tertiaryMainNavigationEntries %}
                            {% if entry.isSeparator %}
                                <div class="h-px bg-gray-200 dark:bg-dark-700 my-1"></div>
                            {% else %}
                                <a {% if entry.url %}href="{{ entry.url }}"{% endif %}
                                   class="pl-7 group flex items-center gap-x-2 rounded-sm px-3 py-2 text-sm leading-6 font-thinner !text-black dark:!text-white {{ entry.isActive ? 'etfswui-nav-link-active' : 'etfswui-nav-link' }}">
                                    {{ entry.title }}
                                </a>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
