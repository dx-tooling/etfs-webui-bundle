{% extends '@Webui/base_appshell.html.twig' %}

{% block body %}
    <div class="fixed top-20 right-4 sm:right-6 lg:right-8 z-50 p-1.5 text-xs font-mono bg-gray-800 text-white rounded shadow-lg">
        <div class="sm:hidden">xs (&lt;640px)</div>
        <div class="hidden sm:block md:hidden">sm (640px)</div>
        <div class="hidden md:block lg:hidden">md (768px)</div>
        <div class="hidden lg:block xl:hidden">lg (1024px)</div>
        <div class="hidden xl:block 2xl:hidden">xl (1280px)</div>
        <div class="hidden 2xl:block">2xl (1536px)</div>
    </div>

    <h1 class="etfswui-pagetitle mb-10">Living Styleguide</h1>

    <div class="space-y-12">
        <!-- Typography -->
        <section class="etfswui-card" id="typography">
            <div class="etfswui-card-title">
                <h2 class="etfswui-card-title-text">Typography</h2>
            </div>
            <div class="etfswui-card-content">
                <div class="space-y-4">
                    <h1 class="etfswui-h1">Heading 1</h1>
                    <h1 class="etfswui-h1-gradient">
                        <span class="etfswui-h1-gradient-span">Gradient H1</span>
                    </h1>
                    <h2 class="etfswui-h2">Heading 2</h2>
                    <h3 class="etfswui-h3">Heading 3</h3>
                    <h4 class="etfswui-h4">Heading 4</h4>
                    <p class="etfswui-text">This is a regular paragraph. Use it to explain benefits, describe features, or tell a story. Keep it concise and focused on the value proposition.</p>
                    <p class="etfswui-text-small">This is smaller text, useful for captions or less critical details.</p>
                    <blockquote class="etfswui-blockquote">
                        "This is a blockquote, perfect for testimonials or highlighting key phrases."
                    </blockquote>
                    <ul class="etfswui-list">
                        <li>Unordered List Item 1</li>
                        <li>Unordered List Item 2</li>
                    </ul>
                </div>
            </div>
        </section>

        <!-- Links -->
        <section class="etfswui-card" id="links">
            <div class="etfswui-card-title">
                <h2 class="etfswui-card-title-text">Links</h2>
            </div>
            <div class="etfswui-card-content space-y-8">
                <div class="space-y-2">
                    <h3 class="etfswui-h4 mb-3">Regular Links</h3>
                    <div><a href="#" class="etfswui-link-default">Default Link (Primary Color)</a></div>
                    <div><a href="#" class="etfswui-link-secondary">Secondary Link (Gray)</a></div>
                    <div><a href="#" class="etfswui-link-danger">Danger Link (Red)</a></div>
                    <div><span class="etfswui-link-default-disabled">Disabled Link</span></div>
                </div>

                <div class="space-y-2">
                    <h3 class="etfswui-h4 mb-3">Links as Buttons</h3>
                    <div class="flex flex-wrap gap-4">
                        <a href="#" class="etfswui-link-as-button-default">Primary Action Link</a>
                        <a href="#" class="etfswui-link-as-button-secondary">Secondary Action Link</a>
                        <span class="etfswui-link-as-button-default-disabled">Disabled Action Link</span>
                        <a href="#" class="etfswui-link-as-button-danger">Danger Action Link</a>
                    </div>
                    <p class="etfswui-text-small mt-2">Use these when the link leads to an important action or destination.</p>
                </div>
            </div>
        </section>

        <!-- Buttons -->
        <section class="etfswui-card" id="buttons">
            <div class="etfswui-card-title">
                <h2 class="etfswui-card-title-text">Buttons</h2>
            </div>
            <div class="etfswui-card-content space-y-8">
                <div class="space-y-2">
                    <h3 class="etfswui-h4 mb-3">Standard Buttons</h3>
                    <div class="flex flex-wrap gap-4">
                        <button type="button" class="etfswui-button-default">Primary Button</button>
                        <button type="button" class="etfswui-button-secondary">Secondary Button</button>
                        <button type="button" class="etfswui-button-default-disabled" disabled>Disabled Button</button>
                        <button type="button" class="etfswui-button-danger">Danger Button</button>
                    </div>
                    <p class="etfswui-text-small mt-2">Use these for primary actions that affect the system state.</p>
                </div>

                <div class="space-y-2">
                    <h3 class="etfswui-h4 mb-3">Buttons as Links</h3>
                    <div class="flex flex-wrap gap-4">
                        <button type="button" class="etfswui-button-as-link-default">Primary Link Button</button>
                        <button type="button" class="etfswui-button-as-link-secondary">Secondary Link Button</button>
                        <button type="button" class="etfswui-button-as-link-default-disabled" disabled>Disabled Link Button</button>
                        <button type="button" class="etfswui-button-as-link-danger">Danger Link Button</button>
                    </div>
                    <p class="etfswui-text-small mt-2">Use these for less prominent actions or navigation disguised as buttons.</p>
                </div>
            </div>
        </section>

        <!-- Form Elements -->
        <section class="etfswui-card" id="forms">
            <div class="etfswui-card-title">
                <h2 class="etfswui-card-title-text">Form Elements</h2>
            </div>
            <div class="etfswui-card-content flex flex-col space-y-6">
                <div>
                    <label for="text-input" class="etfswui-form-label">Text Input</label>
                    <input type="text" id="text-input" class="etfswui-form-input" placeholder="Enter text">
                </div>

                <div>
                    <label for="textarea" class="etfswui-form-label">Text Area</label>
                    <textarea id="textarea" class="etfswui-form-textarea" rows="3" placeholder="Enter multi-line text"></textarea>
                </div>

                <div>
                    <label for="select" class="etfswui-form-label">Select Field</label>
                    <select id="select" class="etfswui-form-select">
                        <option>Option 1</option>
                        <option>Option 2</option>
                        <option>Option 3</option>
                    </select>
                </div>

                <div class="space-y-2">
                    <label class="etfswui-form-checkbox-wrapper">
                        <input type="checkbox" class="etfswui-form-checkbox">
                        <span class="etfswui-form-checkbox-label">Standalone Checkbox</span>
                    </label>
                    <label class="etfswui-form-checkbox-wrapper">
                        <input type="checkbox" class="etfswui-form-checkbox" checked>
                        <span class="etfswui-form-checkbox-label">Checked Checkbox</span>
                    </label>
                </div>

                <div class="space-y-2">
                    <label class="etfswui-form-radio-wrapper">
                        <input type="radio" name="radio-group" class="etfswui-form-radio">
                        <span class="etfswui-form-radio-label">Radio Option 1</span>
                    </label>
                    <label class="etfswui-form-radio-wrapper">
                        <input type="radio" name="radio-group" class="etfswui-form-radio" checked>
                        <span class="etfswui-form-radio-label">Radio Option 2 (Checked)</span>
                    </label>
                </div>

                <div>
                    <label for="text_input_valid" class="etfswui-form-label">Text Input (Valid)</label>
                    <input type="text" id="text_input_valid" value="Looks good" class="etfswui-form-input etfswui-form-input-valid">
                </div>
                <div>
                    <label for="text_input_invalid" class="etfswui-form-label">Text Input (Invalid)</label>
                    <input type="text" id="text_input_invalid" value="Needs fixing" class="etfswui-form-input etfswui-form-input-invalid">
                    <p class="etfswui-form-error-text">Please provide a valid entry.</p>
                </div>
            </div>
        </section>

        <!-- Form Examples -->
        <section class="etfswui-card" id="form-examples">
            <div class="etfswui-card-title">
                <h2 class="etfswui-card-title-text">Form Examples</h2>
            </div>
            <div class="etfswui-card-content flex flex-col space-y-12">
                <div class="space-y-4">
                    <h3 class="etfswui-h3">Simple Contact Form</h3>
                    <form class="max-w-xl space-y-6">
                        <div>
                            <label for="simple-message" class="etfswui-form-label">Your Message</label>
                            <textarea id="simple-message" class="etfswui-form-textarea" rows="4"
                                      placeholder="What would you like to tell us?"></textarea>
                        </div>

                        <div class="flex justify-end">
                            <button type="submit" class="etfswui-button-default">Send Message</button>
                        </div>
                    </form>
                </div>

                <div class="space-y-4">
                    <h3 class="etfswui-h3">Project Creation Form</h3>
                    <form class="max-w-3xl space-y-10">
                        <div class="space-y-6">
                            <h4 class="etfswui-h4 border-b border-gray-200 dark:border-gray-700 pb-2">Basic Information</h4>

                            <div class="grid gap-6 sm:grid-cols-2">
                                <div>
                                    <label for="project-name" class="etfswui-form-label">Project Name</label>
                                    <input type="text" id="project-name" class="etfswui-form-input" placeholder="Enter project name">
                                </div>

                                <div>
                                    <label for="project-type" class="etfswui-form-label">Project Type</label>
                                    <select id="project-type" class="etfswui-form-select">
                                        <option>Web Application</option>
                                        <option>Mobile App</option>
                                        <option>Desktop Software</option>
                                    </select>
                                </div>
                            </div>

                            <div>
                                <label for="project-desc" class="etfswui-form-label">Project Description</label>
                                <textarea id="project-desc" class="etfswui-form-textarea" rows="3"
                                          placeholder="Describe your project"></textarea>
                            </div>
                        </div>

                        <div class="space-y-6">
                            <h4 class="etfswui-h4 border-b border-gray-200 dark:border-gray-700 pb-2">Team Members</h4>

                            <div class="grid gap-x-6 gap-y-4 sm:grid-cols-[150px_1fr]">
                                <label for="project-lead" class="etfswui-form-label sm:text-right sm:pt-2">Project Lead</label>
                                <input type="text" id="project-lead" class="etfswui-form-input" placeholder="Full name">

                                <label for="tech-contact" class="etfswui-form-label sm:text-right sm:pt-2">Technical Contact</label>
                                <input type="text" id="tech-contact" class="etfswui-form-input" placeholder="Full name">

                                <label for="designer" class="etfswui-form-label sm:text-right sm:pt-2">UI/UX Designer</label>
                                <input type="text" id="designer" class="etfswui-form-input" placeholder="Full name">
                            </div>
                        </div>

                        <div class="space-y-6">
                            <h4 class="etfswui-h4 border-b border-gray-200 dark:border-gray-700 pb-2">
                                Project Settings</h4>

                            <div class="space-y-3">
                                <label class="etfswui-form-checkbox-wrapper">
                                    <input type="checkbox" class="etfswui-form-checkbox">
                                    <span class="etfswui-form-checkbox-label">Make project public</span>
                                </label>

                                <label class="etfswui-form-checkbox-wrapper">
                                    <input type="checkbox" class="etfswui-form-checkbox" checked>
                                    <span class="etfswui-form-checkbox-label">Enable collaboration features</span>
                                </label>
                            </div>

                            <fieldset class="mt-4">
                                 <legend class="etfswui-form-label mb-2">Notification Preference</legend>
                                <div class="space-y-2">
                                    <label class="etfswui-form-radio-wrapper">
                                        <input type="radio" name="notifications" class="etfswui-form-radio">
                                        <span class="etfswui-form-radio-label">All Notifications</span>
                                    </label>
                                    <label class="etfswui-form-radio-wrapper">
                                        <input type="radio" name="notifications" class="etfswui-form-radio" checked>
                                        <span class="etfswui-form-radio-label">Only Important Notifications</span>
                                    </label>
                                    <label class="etfswui-form-radio-wrapper">
                                        <input type="radio" name="notifications" class="etfswui-form-radio">
                                        <span class="etfswui-form-radio-label">No Notifications</span>
                                    </label>
                                </div>
                             </fieldset>
                        </div>

                        <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                            <button type="button" class="etfswui-button-as-link-secondary">Cancel</button>
                            <button type="submit" class="etfswui-button-default">Create Project</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- Table -->
        <section class="etfswui-card" id="table">
            <div class="etfswui-card-title">
                <h2 class="etfswui-card-title-text">Table</h2>
            </div>
            <div class="overflow-x-auto">
                <table class="etfswui-table">
                    <thead class="bg-gray-50 dark:bg-gray-700/50">
                        <tr>
                            <th scope="col" class="etfswui-table-header">Name</th>
                            <th scope="col" class="etfswui-table-header">Title</th>
                            <th scope="col" class="etfswui-table-header etfswui-table-header-right">Status</th>
                            <th scope="col" class="etfswui-table-header etfswui-table-header-right">Role</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                        <tr class="etfswui-content-table-row">
                            <td class="etfswui-table-cell">Jane Cooper</td>
                            <td class="etfswui-table-cell etfswui-table-cell-secondary">Regional Paradigm Technician</td>
                            <td class="etfswui-table-cell etfswui-table-cell-right">
                                <span class="etfswui-badge etfswui-badge-success">Active</span>
                            </td>
                            <td class="etfswui-table-cell etfswui-table-cell-right etfswui-table-cell-secondary">Admin</td>
                        </tr>
                         <tr class="etfswui-content-table-row">
                            <td class="etfswui-table-cell">Cody Fisher</td>
                            <td class="etfswui-table-cell etfswui-table-cell-secondary">Product Directives Officer</td>
                             <td class="etfswui-table-cell etfswui-table-cell-right">
                                <span class="etfswui-badge etfswui-badge-warning">Pending</span>
                            </td>
                            <td class="etfswui-table-cell etfswui-table-cell-right etfswui-table-cell-secondary">Member</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Status Badges -->
        <section class="etfswui-card" id="badges">
            <div class="etfswui-card-title">
                <h2 class="etfswui-card-title-text">Status Badges</h2>
            </div>
            <div class="etfswui-card-content space-y-6">
                <div class="space-y-2">
                    <h3 class="etfswui-h4 mb-3">Simple Status Badges</h3>
                    <div class="flex flex-wrap gap-3">
                        <span class="etfswui-badge etfswui-badge-success">Success</span>
                        <span class="etfswui-badge etfswui-badge-warning">Warning</span>
                        <span class="etfswui-badge etfswui-badge-error">Error</span>
                        <span class="etfswui-badge etfswui-badge-info">Info</span>
                        <span class="etfswui-badge etfswui-badge-gray">Neutral</span>
                    </div>
                </div>

                <div class="space-y-2">
                    <h3 class="etfswui-h4 mb-3">Status Badge Examples</h3>
                    <div class="space-y-2">
                        <div>
                            <span class="etfswui-badge etfswui-badge-success">Completed</span>
                            <span class="etfswui-text-small ml-2">For successful or completed states</span>
                        </div>
                        <div>
                            <span class="etfswui-badge etfswui-badge-warning">In Progress</span>
                            <span class="etfswui-text-small ml-2">For ongoing or pending states</span>
                        </div>
                        <div>
                            <span class="etfswui-badge etfswui-badge-error">Failed</span>
                            <span class="etfswui-text-small ml-2">For error or failure states</span>
                        </div>
                         <div>
                            <span class="etfswui-badge etfswui-badge-info">Processing</span>
                            <span class="etfswui-text-small ml-2">For informational states</span>
                        </div>
                        <div>
                            <span class="etfswui-badge etfswui-badge-gray">Archived</span>
                            <span class="etfswui-text-small ml-2">For neutral or archived states</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Cards -->
        <section class="space-y-6" id="cards-section">
            <h2 class="etfswui-h2 border-b border-gray-200 dark:border-gray-700 pb-2 mb-6">Cards</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="etfswui-card">
                    <div class="etfswui-card-title">
                        <span class="etfswui-card-title-text">Simple Card</span>
                    </div>
                    <div class="etfswui-card-content flex flex-col">
                        <p class="etfswui-text-small flex-grow">This is card content demonstrating a basic card layout.</p>
                        <div class="etfswui-card-actions">
                             <a href="#" class="etfswui-link-default text-sm font-medium">Learn More &rarr;</a>
                        </div>
                    </div>
                </div>

                <div class="etfswui-card">
                    <div class="etfswui-card-content text-center flex flex-col">
                         <svg class="mx-auto h-10 w-10 text-blue-500 dark:text-blue-400 mb-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.355a7.5 7.5 0 0 1-3 0m3 0a7.5 7.5 0 0 0-3 0m.375 0a7.5 7.5 0 0 1-3 0m3 0h.008v.008h-.008v-.008Zm-3 0a7.5 7.5 0 0 0-3 0m3 0h.008v.008h-.008v-.008Zm-3 0a7.5 7.5 0 0 1-3 0m3 0h.008v.008h-.008v-.008Zm-3 0a7.5 7.5 0 0 0-3 0m6 0a7.5 7.5 0 0 1-3 0m3 0a7.5 7.5 0 0 0-3 0m3.75 4.46a12.022 12.022 0 0 1-7.5 0m7.5 0a12.022 12.022 0 0 0 7.5 0M4.5 19.5a7.5 7.5 0 0 1 3-1.588m-3 1.588a7.5 7.5 0 0 0 3 1.588m9-1.588a7.5 7.5 0 0 1-3 1.588m3-1.588a7.5 7.5 0 0 0-3-1.588M19.5 4.5l-.813 3.905m.813-3.905a12.06 12.06 0 0 0-7.5 0m7.5 0a12.06 12.06 0 0 1 7.5 0M4.5 4.5l.813 3.905M13.5 4.5a7.5 7.5 0 0 1 3 1.588m-3-1.588a7.5 7.5 0 0 0-3 1.588m9 1.588a7.5 7.5 0 0 1-3-1.588m3 1.588a7.5 7.5 0 0 0-3-1.588m-9-1.588a7.5 7.5 0 0 1 3-1.588m-3 1.588a7.5 7.5 0 0 0 3 1.588M4.5 19.5a7.5 7.5 0 0 1 3 1.588M19.5 19.5a7.5 7.5 0 0 0-3-1.588M4.5 4.5a12.06 12.06 0 0 1 7.5 0m0 0a12.06 12.06 0 0 0 7.5 0" />
                         </svg>
                        <h3 class="text-lg font-semibold">Icon Card</h3>
                        <p class="etfswui-text-small mt-1">Visually represent a concept or feature.</p>
                    </div>
                </div>

                <div class="bg-gray-100 dark:bg-gray-800/50 rounded-md p-6 border border-gray-200 dark:border-gray-700">
                     <blockquote class="italic text-gray-700 dark:text-gray-300 mb-4">
                        "This new style looks great!"
                     </blockquote>
                     <p class="font-semibold text-sm text-gray-800 dark:text-gray-200">- Happy Developer</p>
                </div>

                <div class="etfswui-card col-span-1 md:col-span-2">
                    <div class="etfswui-card-title">
                        <span class="etfswui-card-title-text">Card with Image</span>
                    </div>
                    <div class="etfswui-card-content flex flex-col space-y-4">
                        <div class="bg-gray-100 dark:bg-gray-700 rounded flex items-center justify-center h-40">
                            <svg class="w-16 h-16 text-gray-400 dark:text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5z" />
                             </svg>
                        </div>
                        <p class="etfswui-text flex-grow">This is extended card content stacked vertically below the image placeholder. The text can span multiple lines.</p>
                        <div class="etfswui-card-actions">
                            <a href="#" class="etfswui-link-as-button-secondary">Secondary Action</a>
                            <a href="#" class="etfswui-link-as-button-default">Primary Action</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pagination -->
        <section class="etfswui-card" id="pagination">
            <div class="etfswui-card-title">
                <h2 class="etfswui-card-title-text">Pagination</h2>
            </div>
            <div class="etfswui-card-content">
                <div class="sm:flex sm:flex-1 sm:items-center sm:justify-between">
                    <div>
                        <p class="etfswui-pagination-info">
                            Showing <span class="font-medium">1</span> to <span class="font-medium">10</span> of <span class="font-medium">97</span> results
                        </p>
                    </div>
                    <div>
                        <nav class="etfswui-pagination-nav" aria-label="Pagination">
                            <button class="etfswui-pagination-nav-button etfswui-pagination-nav-button-disabled rounded-l-md">
                                <span class="sr-only">Previous</span>
                                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" /></svg>
                            </button>
                            <a href="#" aria-current="page" class="etfswui-pagination-item etfswui-pagination-item-active">1</a>
                            <a href="#" class="etfswui-pagination-item">2</a>
                            <a href="#" class="etfswui-pagination-item hidden md:inline-flex">3</a>
                            <span class="etfswui-pagination-item">...</span>
                            <a href="#" class="etfswui-pagination-item hidden md:inline-flex">8</a>
                            <a href="#" class="etfswui-pagination-item">9</a>
                            <a href="#" class="etfswui-pagination-item">10</a>
